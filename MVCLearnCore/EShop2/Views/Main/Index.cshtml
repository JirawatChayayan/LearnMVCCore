@model EShop2.Models.TBLCUSTOMER
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<center><h5>Register Customer</h5></center>

<br />

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 table">
        <br />
        <form asp-action="Index" asp-controller="Main">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NAME" class="text-success"></label> 
                <input type="text" asp-for="NAME" class="form-control" />
                <span asp-validation-for="NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LASTNAME" class="text-success"></label>
                <input type="text" asp-for="LASTNAME" class="form-control" />
                <span asp-validation-for="LASTNAME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SEX" class="text-success"></label>&nbsp;
                Male : <input type="radio" asp-for="SEX" value="Male" />
                Female : <input type="radio" asp-for="SEX" value="Female" />
                <span asp-validation-for="SEX" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MOBILE" class="text-success"></label>
                <input type="text" asp-for="MOBILE" class="form-control" />
                <span asp-validation-for="MOBILE" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JOB" class="text-success"></label>
                <select asp-for="JOB"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListJob,"ID", "NAME"))">
                </select>
                <span asp-validation-for="JOB" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <br />

    </div>


    <div class="col-lg-3"></div>


</div>

